package principala;

//**

public class Mario {
    private String Nombre;
    int vidas;
    int nivel;
 
    public Mario (String Nombre, int vidas, int nivel) {
        this.Nombre = Nombre;
        this.vidas = vidas;
        this.nivel = nivel;
    }
 
    public String getNombre() {
        return Nombre;
    }
 
    public int getVidas() {
        return vidas;
    }
 
    public int getNivel() {
        return nivel;
    }
 
 
    public void setVidas(int vidas) {
        this.vidas = vidas;
    }
 
    public void setNivel(int nivel, int Nombre) {
        this.nivel = nivel;
    }
    public void estado(){
        System.out.println( "El nivel de "+ Nombre + " es "  + nivel + " y " + " Tiene estas vidas restantes: " + vidas);
    }
    public void perdervidas(){
    if (vidas>0){
        vidas--;
        System.out.println("Has perdido una vida vidas restantes: " + vidas);
         if(vidas ==0 ){
             System.out.println(Nombre + " Mario esta muerto chao ");
             System.exit(0);
         }
    }
   
    }

   
    }
